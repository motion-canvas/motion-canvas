{
  "compilerOptions": {
    "outDir": "lib",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "transform": "@motion-canvas/internal/transformers/markdown-literals.js"
      }
    ]
  },
  "include": ["src"]
}
